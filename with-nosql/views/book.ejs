<%- include("./partials/header.ejs") %>

<div class="container pt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h1><%= title %></h1>
          <h2>Auteur: <%= book.author %></h2>
          <p>Résumé: <%= book.resume %></p>

          <a href="/books/<%= book.id %>/update" class="card-link btn btn-primary">Modifier</a>
          <a href="/books/<%= book.id %>/delete" class="card-link btn btn-danger">Supprimer</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("./partials/footer.ejs") %>